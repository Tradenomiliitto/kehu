extends layout
include _mixins

block config
  - config_title = t('blog.page-title', 'Kehu – Blogit');
  - config_ogTitle = config_title;
  - config_description = t('blog.page-description', 'Lue blogeja työhyvinvoinnista, positiivisen palautteen vaikutuksesta, oman osaamisen tunnistamisesta ja sanoittamisesta sekä urasuunnittelusta.');
  - config_pageUrl = pageUrl;

block content
  include _header

  .Blog
    .container
      .row
        .col.col-xs-12
          h1.Posts-title #{t('blog.title', 'Kehun blogi')}
          p.Posts-subtitle #{t('blog.subtitle', 'Nappaa parhaat vinkit, miten kehut auttavat sinua urallasi eteenpäin')}

          .Posts
            each post in posts
              +post-card(post)

      .row
        .col.col-xs-12
          +tags-list(tags)

  include _footer